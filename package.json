{
  "name": "bootstrap5_builder",
  "version": "1.0.0",
  "private": true,
  "description": "Templating and Theming site used to create custom sites, based on bootstrap5",
  "author": "Dan McDonald",
  "license": "MIT",
  "main": "./src/js/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcdonaldd1/bootstrap5_builder.git"
  },
  "homepage": "https://github.com/mcdonaldd1/bootstrap5_builder#readme",
  "keywords": [
    "Bootstrap5",
    "Bootstrap icons",
    "npm",
    "webpack",
    "sass",
    "scss",
    "babel",
    "web project",
    "workflow"
  ],
  "scripts": {
    "watch:sass": "sass --watch ./src/sass:./dist/css",
    "compile:sass": "sass ./src/sass:./dist/css",
    "swatch:sass": "sass ./src/swatches:./dist/css",
    "lint:css": "stylelint ./src/sass/",
    "prefix:css": "postcss --replace dist/css/style.css --use autoprefixer --map",
    "bundle:js": "webpack --config-name bundle",
    "pack:js": "webpack --config-name pack",
    "blable:js": "webpack --config-name blable",
    "reset:all": "npm-run-all reset:html reset:scss reset:js",
    "reset:html": "webpack --config-name reset_html",
    "reset:scss": "echo Reset scss",
    "reset:js": "echo Reset js",
    "project:build": "npm-run-all compile:sass blable:js",
    "server:basic": "webpack-dev-server",
    "server:dev": "webpack-dev-server --config-name blable",
    "test:simple": "echo Test"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.0",
    "stylelint": "^14.2.0",
    "stylelint-config-twbs-bootstrap": "^3.0.1",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}

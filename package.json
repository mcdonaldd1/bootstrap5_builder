{
  "name": "bootstrap5_builder",
  "version": "1.1.0",
  "private": true,
  "description": "Templating and Theming site used to create custom sites, based on bootstrap5",
  "author": "Dan McDonald",
  "license": "MIT",
  "main": "./src/js/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcdonaldd1/bootstrap5_builder.git"
  },
  "homepage": "https://github.com/mcdonaldd1/bootstrap5_builder#readme",
  "keywords": [
    "Bootstrap5",
    "Bootstrap icons",
    "npm",
    "webpack",
    "sass",
    "scss",
    "babel",
    "web project",
    "workflow"
  ],
  "scripts": {
    "bundle:js": "webpack --config-name bundle",
    "pack:js": "webpack --config-name pack",
    "blable:js": "webpack --config-name blable",

    "copy:html": "copyfiles -f -s ./src/html/*.html ./dist",
    "copy:fonts:all": "copyfiles -f -s ./src/html/*.html ./dist",
    "copy:fonts:bs5": "copyfiles -f -s ./src/html/*.html ./dist",
    "copy:fonts:google": "copyfiles -s ./src/fonts_google/*.tff ./dist/fonts",

    "project:build": "npm-run-all compile:sass blable:js",
    "server:basic": "webpack-dev-server",

    "prefix:css": "postcss --replace dist/css/style.css --use autoprefixer --map",
    "lint:css": "stylelint ./src/sass/",

    "sass:dev:all": "sass ./src/sass:./dist/css",
    "sass:dev:watch": "sass --watch ./src/sass:./dist/css",
    "sass:dev:style": "sass ./src/sass/style.scss:./dist/css/style.css",
    "sass:bs5:all": "npm-run-all sass:bs5:min sass:bs5:cs sass:bs5:icons",
    "sass:bs5:min": "sass --style=compressed ./node_modules/bootstrap/scss/bootstrap.scss:./dist/css/bootstrap.min.css",
    "sass:bs5:reg": "sass ./node_modules/bootstrap/scss/bootstrap.scss:./dist/css/bootstrap.css",
    "sass:bs5:cs": "sass ./src/sass/vendors/cheatsheet.scss:./dist/css/cheatsheet.css",
    "sass:bs5:icons": "sass ./node_modules/bootstrap-icons/font/bootstrap-icons.scss:./dist/css/bootstrap-icons.css",
    "sass:swatch:all": "sass ./src/swatches:./dist/css",
    "sass:swatch:darkly": "sass ./src/swatches/darkly_swatch.scss:./dist/css/darkly_swatch.css",
    "test:simple": "node ./src/js/test.js"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.0",
    "stylelint": "^14.2.0",
    "stylelint-config-twbs-bootstrap": "^3.0.1",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}

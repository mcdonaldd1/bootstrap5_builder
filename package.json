{
  "name": "web_dev_builder",
  "version": "1.2.5",
  "private": true,
  "description": "Templating and Theming site used to create custom sites",
  "author": "Dan McDonald",
  "license": "MIT",
  "main": "./src/js/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcdonaldd1/bootstrap5_builder.git"
  },
  "homepage": "https://github.com/mcdonaldd1/bootstrap5_builder#readme",
  "keywords": [
    "key",
    "words"
  ],
  "scripts": {
    "build:prod": "webpack",
    "build:dev": "webpack --mode development",
    "server:dev": "webpack-dev-server --mode development --config-name bundle",
    "server:node": "node ./server_node.js",
    "server:lamp": "bash ./server_lamp.sh",
    "server:express": "node ./server_express.js",
    "sass:dev": "sass ./src/sass:./src/css",
    "sass:dev:watch": "sass --watch ./src/sass:./src/css",
    "copy:html:html": "copyfiles -s -u 3 ./src/html/html/*.html ./dist/html",
    "copy:fonts:all": "npm-run-all copy:fonts:bs5 copy:fonts:google",
    "copy:fonts:bs5": "copyfiles -s -u 3 ./src/bs5_icons/fonts/* ./dist/fonts",
    "copy:fonts:google": "copyfiles -s -u 2 ./src/fonts_google/*.ttf ./dist/fonts",
    "prefix:css": "postcss --replace dist/css/style.css --map",
    "lint:css": "stylelint ./src/sass/*.css",
    "lint:scss": "stylelint ./src/sass/*.scss --custom-syntax postcss-scss",
    "purge:css:config": "purgecss --config ./purgecss.config.js",
    "purge:css": "purgecss --css ./dist/css/style.css --content ./dist/index.html --output ./dist/css/style.min.css"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.6.0",
    "glob-all": "^3.2.1",
    "html-webpack-plugin": "^5.5.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.3",
    "purgecss-webpack-plugin": "^4.1.3",
    "sass": "^1.49.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
